# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# AI API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Repository Access Control (optional)
# Comma-separated list of allowed repository URLs
# If not set, all repositories are allowed
ALLOWED_REPOS=https://github.com/user/repo1,https://github.com/user/repo2

# User Access Control (optional)
# Comma-separated list of allowed Telegram user IDs
# If not set, all users are allowed
ALLOWED_USERS=123456,789012

# Database Configuration (optional)
# Database file path - defaults to 'bot.db'
DATABASE_PATH=bot.db
